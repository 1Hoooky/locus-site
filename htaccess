#BUILDER-START#
# Enable rewriting.
RewriteEngine on

# Redireciona index.html para a URL raiz (301 - Permanente)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
RewriteRule ^index\.html$ https://locuslocacoes.com.br/ [R=301,L]

# Redireciona paginas de categoria de .html para URL limpa (301 - Permanente)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^/]+)\.html\ HTTP/
RewriteRule ^([^/]+)\.html$ https://locuslocacoes.com.br/$1 [R=301,L]

RewriteCond %{HTTPS} off
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
Header add Vary "User-Agent"
Header add X-Generated "%t"
Options -Indexes
Options +FollowSymLinks
RewriteBase /

# *** CORREÇÃO DEFINITIVA: IGNORAR QUALQUER ARQUIVO COM EXTENSÃO ***
# Se a URL solicitada for um arquivo existente OU contiver uma extensão (ex: .js, .css, .jpg), IGNORAR as regras de reescrita
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_URI} \.(css|js|jpe?g|gif|png|woff2|woff|ttf|ico|pdf)$ [NC]
RewriteRule ^ - [L]
# *** FIM DA CORREÇÃO ***

RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^$ index.html
RewriteRule ^([^/]+)/([^/]+)/?.*$ $1_$2.html
RewriteRule ^([^/]+)/$ $1.html
RewriteRule ^([\w_-]+)$ $1.html
#BUILDER-END

# php -- BEGIN cPanel-generated handler, do not edit
# Defina o pacote “ea-php82” como a linguagem padrão de programação “PHP”.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82___lsphp .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit